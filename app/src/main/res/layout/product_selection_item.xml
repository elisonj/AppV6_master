<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/category_header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#f4f5f9"
        android:layout_height="55dp">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category"
                android:textColor="#484d51"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/category_quantity"
                android:textColor="#484d51"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_gravity="center_vertical"
            android:layout_width="15dp"
            android:layout_height="13dp"
            android:layout_margin="10dp"
            android:layout_weight="0.07"
            android:contentDescription="@string/ico_category"
            app:srcCompat="@drawable/arrow_open_list" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/quantity_selection_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="#e4e8eb"
        android:layout_height="80dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>